set nocompatible
set autoread

set viminfo='0,:0,<0,@0,f0
set noswapfile
set nobackup
set nowritebackup

set number
set relativenumber

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nowrap

set scrolloff=8
set cmdheight=2
set splitbelow
set splitright
set nowrapscan

let mapleader=" "

nnoremap <C-l> :noh<CR>

vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv

let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_browse_split = 4
let g:netrw_altv = 1
let g:netrw_winsize = 20
